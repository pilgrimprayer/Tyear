<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        card_view:cardBackgroundColor="#FFFFFF"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="6dp"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/radio_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_margin="8dp"
                android:text="今天作息正常吗？？"
                android:textSize="14sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/radio_label"
                style="@style/label"
                android:layout_width="35dp"
                android:layout_height="20dp"
                android:layout_marginEnd="18dp"
                android:layout_marginRight="18dp"
                android:elevation="0dp"
                android:text="生活"
                android:textAlignment="center"
                android:textSize="12sp"
                android:layout_alignTop="@+id/radio_title"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <RadioGroup
                android:id="@+id/radiogruop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radio_title"
                android:padding="4dp">

                <RadioButton

                    android:id="@+id/radioButton1"
                    style="@style/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="准点早起"
                    android:checked="false"
                    android:visibility="gone"
                    />

                <RadioButton

                    android:id="@+id/radioButton2"
                    style="@style/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:visibility="gone"
                    android:text="闹钟响了好几次呢" />

                <RadioButton

                    android:id="@+id/radioButton3"
                    style="@style/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:visibility="gone"
                    android:text="睡懒觉，闹钟？不存在的" />
                <RadioButton

                    android:id="@+id/radioButton4"
                    style="@style/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:visibility="gone" />
                <RadioButton

                    android:id="@+id/radioButton5"
                    style="@style/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:visibility="gone" />

            </RadioGroup>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>